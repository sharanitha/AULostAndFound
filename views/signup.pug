doctype html
head
  meta(charset='utf-8')
  title AU Lost & Found | Sign Up
  include ./bootstrap.pug
  style
    include ../public/css/style.css  
  include ./navSignup.pug
body
    div.container
        div.row
            div.col-sm.login
                h1 AU Lost & Found
                hr
                p.login.white This is the AU Lost and Found system

            div.col-sm.login
                .login-form
                    h1 Sign Up
                    form(action='createUser' method='POST' )
                        if type.invalidEmail
                            .alert.alert-danger(role='alert') This email is already in use
                        if type.invalidPassword
                            .alert.alert-danger(role='alert') Passwords no not match
                        .input-group.mb-3
                            input#email.form-control(type='text'  name='email' placeholder='Email' required='')
                            .input-group-append
                                span#basic-addon2.input-group-text @aurora.edu
                        .input-group.mb-3
                            input#password.form-control(type='password' name='password' placeholder='Password' required='')
                        .input-group.mb-3
                            input#passwordRetype.form-control(type='password' name='passwordRetype' placeholder='Retype Password' required='')
                        .input-group.mb-3
                            input#passwordRetype.form-control(type='text' name='first_name' placeholder='First Name' required='')
                        .input-group.mb-3
                            input#passwordRetype.form-control(type='text' name='last_name' placeholder='Last Name' required='')
                        .input-group.mb-3
                            input#passwordRetype.form-control(type='text' name='phone_number' placeholder='Phone Number' required='')

                        input(type='submit')
                        .alert.alert-primary
                            a(href="/")  Already a member? Sign in now